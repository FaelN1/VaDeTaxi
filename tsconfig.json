{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs", // Necessário para o Jest
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Facilita a importação de módulos
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
